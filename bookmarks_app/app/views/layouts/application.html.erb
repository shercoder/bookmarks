<!DOCTYPE html>
<html>
<head>
  <title>clip it!</title>
  <%= favicon_link_tag		"favicon.ico", :rel => "icon", :type => "image/ico"%>
  <%= stylesheet_link_tag	"application", :media => "all" %>
  <%= stylesheet_link_tag	"http://fonts.googleapis.com/css?family=Tangerine" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		<div class="content-wrapper">
			<hgroup>
				<ul>
					<li><%=image_tag"attachment.png"%></li>
					<li>
						<h1 id="logo"><%= link_to "clip it!", @user %></h1>
					</li>
				</ul>
			</hgroup>

			<nav id="menu">
				<ul>
					<% if load_current_user %>
						<li><%= link_to "Profile", load_current_user %></li>
					<% end %>
					<li><%= link_to "Tags", tags_path %></li>
					<li><%= link_to "Popular", popular_bookmarks_path %></li>

					<% if load_current_user %>
						<li><%= link_to "New", new_bookmark_path %></li>
					<% end %>
				</ul>
			</nav>

			<nav id="right">
				<% if load_current_user%>
					<ul>
						<li><%= link_to "Logoff", signout_path, :method => :delete %></li>
					</ul>
				<% else %>
					<ul>
						<li><%= link_to "Login", signin_path %></li>
						<li><%= link_to "Register", signup_path %></li>
					</ul>
				<% end %>

			</nav>

		</div>
	</header>

	<section id="main-wrapper" class="content-wrapper">
		<% if flash[:notice] %>
		<section id="content" class="center">
		  <p class="dark-color">
		    <%= flash[:notice] %>
		  </p>
		</section>
		<% end %>

		<%= yield %>
	</section>

	<footer>
		<div class="content-wrapper"><small>&copy; Copyright Pardeep "SherCoder" Singh 2012</small></div>
	</footer>

</body>
</html>
